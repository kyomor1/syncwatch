generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Room {
  id           String   @id @default(uuid())
  hostId       String
  createdAt    DateTime @default(now())
  lastActivity DateTime @default(now())
  currentVideo String?
  videoType    String?
  playState    Boolean  @default(false)
  currentTime  Float    @default(0)
}
